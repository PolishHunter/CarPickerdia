<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_100"
    tools:context=".views.casual.ResultsFragment">


    <View
        android:id="@+id/view_results_1"
        android:layout_width="200dp"
        android:layout_height="360dp"
        android:background="@drawable/rounded_virtual_card"
        android:backgroundTint="@color/emphasize_green"
        app:layout_constraintBottom_toTopOf="@+id/view_results_3"
        app:layout_constraintEnd_toStartOf="@+id/view_results_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_results_2"
        android:layout_width="200dp"
        android:layout_height="360dp"
        android:background="@drawable/rounded_virtual_card"
        android:backgroundTint="@color/blue_200"
        app:layout_constraintBottom_toTopOf="@+id/view_results_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_results_1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_results_3"
        android:layout_width="200dp"
        android:layout_height="360dp"
        android:background="@drawable/rounded_virtual_card"
        android:backgroundTint="@color/blue_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_results_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_results_1" />

    <View
        android:id="@+id/view_results_4"
        android:layout_width="200dp"
        android:layout_height="360dp"
        android:background="@drawable/rounded_virtual_card"
        android:backgroundTint="@color/blue_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_results_3"
        app:layout_constraintTop_toBottomOf="@+id/view_results_2" />

    <ImageView
        android:id="@+id/image_view_results_1"
        android:layout_width="170dp"
        android:layout_height="125dp"
        android:background="@color/grey_light"
        android:contentDescription="@string/image_results_one"
        app:layout_constraintBottom_toBottomOf="@+id/view_results_1"
        app:layout_constraintEnd_toEndOf="@+id/view_results_1"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/view_results_1"
        app:layout_constraintTop_toTopOf="@+id/view_results_1"
        app:layout_constraintVertical_bias="0.089"
        tools:src="@drawable/mercedes" />

    <ImageView
        android:id="@+id/image_view_results_2"
        android:layout_width="170dp"
        android:layout_height="125dp"
        android:background="@color/grey_light"
        android:contentDescription="@string/image_results_two"
        app:layout_constraintBottom_toBottomOf="@+id/view_results_2"
        app:layout_constraintEnd_toEndOf="@+id/view_results_2"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/view_results_2"
        app:layout_constraintTop_toTopOf="@+id/view_results_2"
        app:layout_constraintVertical_bias="0.089"
        tools:src="@drawable/ferrari" />

    <ImageView
        android:id="@+id/image_view_results_3"
        android:layout_width="170dp"
        android:layout_height="125dp"
        android:background="@color/grey_light"
        android:contentDescription="@string/image_results_three"
        app:layout_constraintBottom_toBottomOf="@+id/view_results_3"
        app:layout_constraintEnd_toEndOf="@+id/view_results_3"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/view_results_3"
        app:layout_constraintTop_toTopOf="@+id/view_results_3"
        app:layout_constraintVertical_bias="0.089"
        tools:src="@drawable/chevrolet" />

    <ImageView
        android:id="@+id/image_view_results_4"
        android:layout_width="170dp"
        android:layout_height="125dp"
        android:background="@color/grey_light"
        android:contentDescription="@string/image_results_four"
        app:layout_constraintBottom_toBottomOf="@+id/view_results_4"
        app:layout_constraintEnd_toEndOf="@+id/view_results_4"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/view_results_4"
        app:layout_constraintTop_toTopOf="@+id/view_results_4"
        app:layout_constraintVertical_bias="0.093"
        tools:src="@drawable/honda" />

    <TextView
        android:id="@+id/text_view_results_1"
        android:layout_width="170dp"
        android:layout_height="185dp"
        android:background="@color/blue_100"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="@string/car_one"
        android:textColor="@color/grey_main"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_results_1"
        app:layout_constraintEnd_toEndOf="@+id/view_results_1"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/view_results_1"
        app:layout_constraintTop_toBottomOf="@+id/image_view_results_1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_view_results_2"
        android:layout_width="170dp"
        android:layout_height="185dp"
        android:background="@color/blue_100"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="@string/car_two"
        android:textColor="@color/grey_main"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_results_2"
        app:layout_constraintEnd_toEndOf="@+id/view_results_2"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="@+id/view_results_2"
        app:layout_constraintTop_toBottomOf="@+id/image_view_results_2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_view_results_3"
        android:layout_width="170dp"
        android:layout_height="185dp"
        android:background="@color/blue_100"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="@string/car_three"
        android:textColor="@color/grey_main"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_results_3"
        app:layout_constraintEnd_toEndOf="@+id/view_results_3"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/view_results_3"
        app:layout_constraintTop_toBottomOf="@+id/image_view_results_3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_view_results_4"
        android:layout_width="170dp"
        android:layout_height="185dp"
        android:background="@color/blue_100"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="@string/car_four"
        android:textColor="@color/grey_main"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_results_4"
        app:layout_constraintEnd_toEndOf="@+id/view_results_4"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/view_results_4"
        app:layout_constraintTop_toBottomOf="@+id/image_view_results_4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_baseline_check_box_24"
        app:layout_constraintBottom_toBottomOf="@+id/view_results_1"
        app:layout_constraintEnd_toEndOf="@+id/view_results_1"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="@+id/view_results_1"
        app:layout_constraintTop_toBottomOf="@+id/image_view_results_1"
        app:layout_constraintVertical_bias="0.89" />
</androidx.constraintlayout.widget.ConstraintLayout>