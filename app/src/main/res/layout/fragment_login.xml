<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_300"
    tools:context=".views.login.LoginFragment">


    <View
        android:id="@+id/view_login"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@color/blue_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_home_car"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:contentDescription="@string/tesla"
        android:src="@drawable/tesla"
        app:layout_constraintBottom_toBottomOf="@+id/view_login"
        app:layout_constraintEnd_toEndOf="@+id/view_login"
        app:layout_constraintStart_toStartOf="@+id/view_login"
        app:layout_constraintTop_toTopOf="@+id/view_login" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/button_google_sign_in"
        style="@style/sign_in_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_home_car"
        app:layout_constraintVertical_bias="0.63"
        />

</androidx.constraintlayout.widget.ConstraintLayout>